{% if pages.pageCount > 1 %}
<ul class="pagination">{% if pages.previous is defined %}
  <li><a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'pageno': pages.previous})) }}" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>{% endif %}
  {% for page in pages.pagesInRange %}
  <li class="{{ page == pages.current ? 'active' }}"><a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'pageno': page})) }}">{{ page }}</a></li>{% endfor %}
  {% if pages.next is defined %}
  <li><a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'pageno': pages.next})) }}" aria-label="Next"><span aria-hidden="true">&raquo;</span></a></li>{% endif %}
</ul>{% endif %}